<Window x:Class="WPFUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFUI"
        mc:Ignorable="d"
        Title="C#RPG" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="225"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width ="225"></ColumnDefinition>
            <ColumnDefinition Width ="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Grid.Row ="0" Grid.Column="0" Content ="Menu"></Label>
        <Label Grid.Row ="1" Grid.Column="0" Content ="Player Data" Background="Aquamarine"></Label>
        <Label Grid.Row ="1" Grid.Column="1" Content ="Game Data" Background="Beige"></Label>
        <Label Grid.Row ="2" Grid.Column="0" Content ="Inventory/Quest" Background="BurlyWood"></Label>
        <Label Grid.Row ="2" Grid.Column="1" Content ="Combat / Movement Controls" Background="Lavender"></Label>
        
        
        
    </Grid>
</Window>
